@model Foody.Services.DataServices.Models.Content.EditMicroElementViewModel
@{
    ViewData["Title"] = "Edit Micro Element";
}

<h2 class="text-center">Edit Micro Element</h2>

<div class="col-md-offset-1 col-md-10">
    <form method="post" asp-action="EditMicroElement" asp-controller="Content" asp-area="Administration" autocomplete="off" enctype="multipart/form-data">
        <hr class="hr-2" />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row">
            <div class="col-md-offset-4 col-md-4 form-group text-center">
                <label asp-for="Name" class="text-center"></label>
                <input asp-for="Name" class="form-control" placeholder="Choose name..." />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <hr class="hr-2" />
        <div class="form-group text-center">
            <label asp-for="Description" class="text-center"></label>
            <textarea asp-for="Description" class="form-control" rows="10" placeholder="Description..."></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <hr class="hr-2" />
        <img src="/Images/Get/location?location=@Model.ImageLocation" class="img-responsive center-block" alt="image not available">
        <input type="hidden" asp-for="ImageLocation" value="@Model.ImageLocation" class="form-control" />
        <hr class="hr-2" />
        <div class="row">
            <div class="col-md-offset-4 col-md-4 form-group text-center">
                <label asp-for="NewImage" class="text-center">Choose new image (optional)...</label>
                <input type="file" asp-for="NewImage" class="form-control" />
            </div>
        </div>
        <input type="hidden" asp-for="Id" value="@Model.Id" class="form-control" />
        <input type="hidden" asp-for="CurrentPage" value="@Model.CurrentPage" class="form-control" />
        <input type="hidden" asp-for="SearchText" value="@Model.SearchText" class="form-control" />
        <hr class="hr-2" />
        <h4 class="text-center">Current type: @Model.Type. Please select another type if needed.</h4>
        <div class="form-group text-center">
            @if (Model.Type == "Vitamin")
            {
                <input asp-for="Type" type="radio" id="vitamin" value="Vitamin" checked="checked">
                <label for="vitamin">Vitamin</label>

                <input asp-for="Type" type="radio" id="mineral" value="Mineral">
                <label for="mineral">Mineral</label>

                <input asp-for="Type" type="radio" id="other" value="Other">
                <label for="other">Other</label>
                <span asp-validation-for="Type" class="text-danger"></span>
            }
            else if (Model.Type == "Mineral")
            {
                <input asp-for="Type" type="radio" id="vitamin" value="Vitamin">
                <label for="vitamin">Vitamin</label>

                <input asp-for="Type" type="radio" id="mineral" value="Mineral" checked="checked">
                <label for="mineral">Mineral</label>

                <input asp-for="Type" type="radio" id="other" value="Other">
                <label for="other">Other</label>
                <span asp-validation-for="Type" class="text-danger"></span>
            }
            else
            {
                <input asp-for="Type" type="radio" id="vitamin" value="Vitamin">
                <label for="vitamin">Vitamin</label>

                <input asp-for="Type" type="radio" id="mineral" value="Mineral">
                <label for="mineral">Mineral</label>

                <input asp-for="Type" type="radio" id="other" value="Other" checked="checked">
                <label for="other">Other</label>
                <span asp-validation-for="Type" class="text-danger"></span>
            }
        </div>
        <hr class="hr-2" />

        <div class="row form-group">
            <div class="col-md-offset-2 col-md-3">
                <button type="submit" class="btn btn-success form-control">Edit</button>
            </div>
            <div class="col-md-offset-2 col-md-3">
                <a href="/Administration/Content/Edit_Micro_Elements?currentPage=@(Model.CurrentPage)&initialOpen=false&searchText=@Model.SearchText" class="btn btn-danger form-control" role="button">Cancel</a>
            </div>
        </div>
    </form>
</div>