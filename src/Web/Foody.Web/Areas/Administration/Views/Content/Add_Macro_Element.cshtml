@model Foody.Services.Models.Content.AddMacroElementBindingModel
@{
    ViewData["Title"] = "Add Macro Element";
}

<h2 class="text-center">Add Macro Element</h2>

<div class="col-md-offset-1 col-md-10">
    <form method="post" asp-action="Add_Macro_Element" asp-controller="Content" asp-area="Administration" enctype="multipart/form-data">
        <hr class="hr-2" />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row">
            <div class="col-md-offset-4 col-md-4 form-group text-center">
                <label asp-for="Name" class="text-center"></label>
                <input asp-for="Name" class="form-control col-md-9" placeholder="Choose name..." />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <hr class="hr-2" />
        <div class="form-group text-center">
            <label asp-for="Description" class="text-center"></label>
            <textarea asp-for="Description" class="form-control" rows="10" placeholder="Description..."></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <hr class="hr-2" />
        <h4 class="text-center">Enter the caloric content, leave it zero if the element contains no calories..</h4>
        <div class="row">
            <div class="col-md-offset-5 col-md-2 form-group text-center">
                <label asp-for="CaloricContentPerGram" class="text-center"></label>
                <input type="text" asp-for="CaloricContentPerGram" class="form-control" value="0">
                <span asp-validation-for="CaloricContentPerGram" class="text-danger"></span>
            </div>
        </div>
        <hr class="hr-2" />
        <div class="row">
            <div class="col-md-offset-3 col-md-6 form-group text-center">
                <label asp-for="Image" class="text-center">Choose image(optional)...</label>
                <input type="file" asp-for="Image" class="form-control" />
            </div>
        </div>
        <hr class="hr-2" />
        <div class="text-center form-group col-md-4 col-md-offset-4">
            <button type="submit" class="btn btn-success form-control">Add</button>
        </div>
    </form>
</div>