@using System.Text
@model Foody.Services.DataServices.Models.Content.AddRecipeBindingModel
@{
    ViewData["Title"] = "Add Recipe";
}

<h2 class="text-center">Add Recipe</h2>

<div class="col-md-offset-1 col-md-10">
    <form method="post" asp-action="Add_Recipe" asp-controller="Content" asp-area="Administration" enctype="multipart/form-data">
        <hr class="hr-2" />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row">
            <div class="col-md-offset-4 col-md-4 form-group text-center">
                <label asp-for="Name" class="text-center"></label>
                <input asp-for="Name" class="form-control col-md-9" placeholder="Choose name..." />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <hr class="hr-2" />
        <div class="form-group text-center">
            <label asp-for="Description" class="text-center"></label>
            <textarea asp-for="Description" class="form-control" rows="10" placeholder="Description..."></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <hr class="hr-2" />
        <h4 class="text-center">Food items added:</h4>
        <div class="form-group text-center">
            <div>
                @if (Model != null)
                {
                    for (int i = 0; i < Model.FoodItems.Count; i++)
                    {
                        <div class="row">
                            <div class="col-md-offset-2 col-md-4">
                                <select asp-for="FoodItems[i].Name">
                                    @foreach (var foodItem in this.ViewData["FoodItemsNames"] as List<string>)
                                    {
                                        <option value="@foodItem">@foodItem</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label asp-for="FoodItems[i].AmountInGrams" class="text-center">Amount in grams:</label>
                            </div>
                            <div class="col-md-2">
                                <input asp-for="FoodItems[i].AmountInGrams" type="number" class="form-control" />
                            </div>
                        </div>
                    }
                }
                <label asp-for="AddFieldsCount" class="text-center">Add field(s)</label>
                <div class="row">
                    <div class="col-md-offset-4 col-md-2">
                        <input asp-for="AddFieldsCount" type="text" class="form-control" value="0" />
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-default">Add fields</button>
                    </div>
                </div>
            </div>
        </div>
        <hr class="hr-2" />
        <div class="row">
            <div class="col-md-offset-3 col-md-6 form-group text-center">
                <label asp-for="Image" class="text-center">Choose image(optional)...</label>
                <input type="file" asp-for="Image" class="form-control" />
            </div>
        </div>
        <hr class="hr-2" />
        <div class="text-center form-group col-md-4 col-md-offset-4">
            <button type="submit" class="btn btn-success form-control">Add</button>
        </div>
    </form>
</div>
