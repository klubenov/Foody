@model Foody.Services.Models.Articles.CreateArticleBindingModel
@{
    ViewData["Title"] = "Create Article";
}

<h2 class="text-center">Create Article</h2>

<div class="col-md-offset-3 col-md-6">
    <form method="post" asp-action="Create_Article" asp-controller="Articles" asp-area="Administration" enctype="multipart/form-data">
        <hr class="hr-2" />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group text-center">
            <label asp-for="Title" class="text-center"></label>
            <input asp-for="Title" class="form-control col-md-9" placeholder="Choose title..." />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <hr class="hr-2" />
        <div class="form-group text-center">
            <label asp-for="Content" class="text-center"></label>
            <textarea asp-for="Content" class="form-control" rows="20" placeholder="Your article's content."></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <hr class="hr-2" />
        <div class="form-group text-center">
            <label asp-for="Image" class="text-center">Choose article image...</label>
            <input type="file" asp-for="Image" class="form-control" />
        </div>
        <hr class="hr-2" />
        <div class="text-center form-group col-md-4 col-md-offset-4">
            <button type="submit" class="btn btn-default form-control">Send for approval</button>
        </div>
    </form>
</div>



